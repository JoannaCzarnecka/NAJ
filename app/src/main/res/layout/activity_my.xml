<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity"
    android:background="#ffffe8e8">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Lista przepisów"
        android:id="@+id/button"
        android:textColor="#ffff5abe"
        android:textSize="35dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Dodaj własny"
        android:id="@+id/button2"
        android:textColor="#ffff5cc2"
        android:textSize="35dp"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Zaloguj się"
        android:id="@+id/button3"
        android:textSize="35dp"
        android:textColor="#ffff44d9"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true" />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zdjecie"
        android:src="@drawable/cookbook"
        android:maxHeight="10dp"
        android:maxWidth="10dp"
        android:layout_below="@+id/button3"/>




</RelativeLayout>
